#
# ~/.bash_aliases
#
# Bash alias definitions.

# ls
alias ll='ls -l'
alias la='ls -a'
alias l1='ls -1'
alias la1='ls -1a'
alias lla='ls -la'
alias lsd='ls -d'
# BSD ls colors
#alias ls='ls -G'
# GNU ls colors
alias ls='ls --color=auto'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# python
alias py='python'
alias py2='python2.7'
alias py3='python3.4'
alias python2='python2.7'
alias python3='python3.4'

# vim used as pager to support syntax highlighting
alias vless='vim -u /opt/local/share/vim/vim74/macros/less.sh'

# Common commands in Russian
alias св='cd'
alias ьм='mv'
alias сз='cp'
alias кь='rm'
alias кь-к='rm -r'
alias ды='ls'
alias дд='ll'
alias мш='vi'
