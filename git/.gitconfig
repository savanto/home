[user]
  name = savanto
  email = savanto@users.noreply.github.com

[core]
  editor = vim

[merge]
  tool = vimdiff

[alias]
  ac = !git add -A && git commit
  ca = commit -a
  ch = checkout
  cm = commit
  cp = cherry-pick
  st = status -sb
  ls = ls-tree --name-only -r HEAD
  pom = pull origin master
  assume = update-index --assume-unchanged
  backtag = "!sh -c '[ $# -ge 2 ] && GIT_COMMITTER_DATE=\"$1\" git tag -a $2 $3 || echo \"Usage: git backtag <date time> <name> [<commit>]\" && exit 1' -"
  branches = branch -a
  graph = log --graph --all --oneline --decorate
  last = log -1 HEAD
  remotes = remote -v
  tags = tag -l
  unassume = update-index --no-assume-unchanged
  unstage = reset HEAD --

[color]
  ui = 1

[help]
  autocorrect = 0
